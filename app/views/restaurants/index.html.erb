<div class="container">
  <h1>All Restaurants: </h1>
  <hr>
  <%= link_to "Add new restaurant", new_restaurant_path %>
  <hr>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= restaurant.name %> -
      <%= restaurant.address %> -
      <%= restaurant.category %>
    </li>
    <%= link_to "Check restaurant details", restaurant_path(restaurant) %>
  <% end %>
</div>
